  "document_processing": {
    "ocr_settings": {
      "enabled": true,
      "languages": ["en", "es", "fr"],
      "confidence_threshold": 0.8,
      "auto_retry": true
    },
    "metadata_extraction": {
      "enabled": true,
      "extraction_rules": {
        "contract_id": "regex_patterns.contract_id",
        "amounts": "regex_patterns.currency_amounts",
        "dates": "regex_patterns.date_formats",
        "parties": "nlp_entities.organization_names"
