	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.w2.samsung.com" />
		<property name="port" value="25" />
		<property name="username" value="rms.nahq" />
		<property name="password" value="rM$0802" />		
		<property name="defaultEncoding" value="UTF-8"/> 
		<property name="javaMailProperties">
			<props>
	       		<prop key="mail.smtp.auth">true</prop>
			</props>
		</property>
	</bean>

	<bean id="mailMessage" class="org.springframework.mail.SimpleMailMessage">
	    <property name="from"><value><![CDATA[]]></value></property>
	    <property name="subject"><value>Procurement Report</value></property>
	</bean>

	<bean id="mailNotifier" class="com.samsung.rms.batch.mail.EmailNotifier">
	    <property name="from"><value><![CDATA[Sender email]]></value></property>
	   	<property name="to"><value><![CDATA[email]]></value></property>
	   	<property name="cc"><value><![CDATA[email]]></value></property>
	    <property name="subject"><value>Title</value></property>
	    <property name="mailSender" ref="mailSender" />
	</bean>

	<import resource="classpath:resources/config/spring/dataSourceContext.xml" /> 

</beans>

