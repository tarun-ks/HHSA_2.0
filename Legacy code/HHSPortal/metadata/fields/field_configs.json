        "visible": true,
        "editable": true,
        "required": false,
        "rows": 10
      }
    },
    "workflow_instance": {
      "wob_number": {
        "field_name": "wob_number",
        "type": "text",
        "label": "WOB Number",
        "help_text": "Workflow object number",
        "visible": true,
        "editable": false,
        "required": true
      },
      "status": {
        "field_name": "status",
        "type": "select",
        "label": "Status",
        "help_text": "Current status of the workflow",
        "data_source": "data_sources.workflow_statuses",
        "visible": true,
        "editable": false,
        "required": true
      },
      "current_step": {
        "field_name": "current_step",
        "type": "text",
        "label": "Current Step",
        "help_text": "Current step in the workflow",
        "visible": true,
        "editable": false,
        "required": false
      },
      "assigned_to": {
        "field_name": "assigned_to",
        "type": "select",
        "label": "Assigned To",
        "help_text": "User assigned to the workflow",
        "data_source": "data_sources.users",
        "visible": true,
        "editable": true,
        "required": false
      },
      "properties": {
        "field_name": "properties",
        "type": "textarea",
        "label": "Properties",
        "help_text": "Workflow properties JSON",
        "visible": true,
        "editable": true,
        "required": false,
        "rows": 5
      }
    }
  },
  "document_fields": {
    "document_type": {
      "name": {
        "field_name": "name",
        "type": "text",
        "label": "Document Type Name",
        "help_text": "Name of the document type",
        "visible": true,
        "editable": true,
        "required": true,
        "max_length": 100
      },
      "category": {
        "field_name": "category",
        "type": "select",
        "label": "Category",
        "help_text": "Category of the document type",
        "data_source": "data_sources.document_categories",
        "visible": true,
        "editable": true,
        "required": true
      },
      "file_extensions": {
        "field_name": "file_extensions",
        "type": "text",
        "label": "File Extensions",
        "help_text": "Allowed file extensions (comma-separated)",
        "visible": true,
        "editable": true,
        "required": false,
        "placeholder": "pdf,doc,docx"
      },
      "max_file_size": {
        "field_name": "max_file_size",
        "type": "number",
        "label": "Max File Size (MB)",
        "help_text": "Maximum file size in megabytes",
        "visible": true,
        "editable": true,
        "required": false,
        "min_value": 1,
        "max_value": 100
      },
      "is_required": {
        "field_name": "is_required",
        "type": "boolean",
        "label": "Required",
        "help_text": "Whether this document type is required",
        "visible": true,
        "editable": true,
        "required": false,
        "default": false
      }
    },
    "document": {
      "title": {
        "field_name": "title",
        "type": "text",
        "label": "Document Title",
        "help_text": "Title of the document",
        "visible": true,
        "editable": true,
        "required": true,
        "max_length": 255
      },
      "file_name": {
        "field_name": "file_name",
        "type": "text",
        "label": "File Name",
        "help_text": "Name of the uploaded file",
        "visible": true,
        "editable": false,
        "required": true,
        "max_length": 255
      },
      "file_path": {
        "field_name": "file_path",
        "type": "text",
        "label": "File Path",
        "help_text": "Path to the file in storage",
        "visible": true,
        "editable": false,
        "required": true,
        "max_length": 500
      },
      "file_size": {
        "field_name": "file_size",
        "type": "number",
        "label": "File Size (bytes)",
        "help_text": "Size of the file in bytes",
        "visible": true,
        "editable": false,
        "required": true,
        "min_value": 0
      },
      "mime_type": {
        "field_name": "mime_type",
        "type": "text",
        "label": "MIME Type",
        "help_text": "MIME type of the file",
        "visible": true,
        "editable": false,
        "required": true,
        "max_length": 100
      },
      "version": {
        "field_name": "version",
        "type": "number",
        "label": "Version",
        "help_text": "Version number of the document",
        "visible": true,
        "editable": false,
        "required": true,
        "min_value": 1
      },
      "is_current_version": {
        "field_name": "is_current_version",
        "type": "boolean",
        "label": "Current Version",
        "help_text": "Whether this is the current version",
        "visible": true,
        "editable": false,
        "required": true,
        "default": true
      },
      "status": {
        "field_name": "status",
        "type": "select",
        "label": "Status",
        "help_text": "Status of the document",
        "data_source": "data_sources.document_statuses",
        "visible": true,
        "editable": true,
        "required": true,
        "default": "ACTIVE"
      }
    }
  },
