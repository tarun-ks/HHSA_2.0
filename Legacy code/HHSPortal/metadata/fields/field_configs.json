{
  "version": "1.0.0",
  "description": "Complete Contract Management Field Configurations with Legacy System Labels",
  "contract_fields": {
    "basic_information": {
      "contract_id": {
        "field_name": "contract_id",
        "type": "text",
        "label": "Contract ID",
        "help_text": "Unique identifier for the contract",
        "placeholder": "CON-001-2024",
        "visible": true,
        "editable": {
          "type": "conditional",
          "condition": "{{form.mode}} === 'create'",
          "value": true,
          "fallback": false
        },
        "required": true,
        "max_length": 50,
        "format": "uppercase",
        "validation": "validation_rules.contract.fields.contract_id"
      },
      "title": {
        "field_name": "title",
        "type": "text",
        "label": "Contract Title",
        "help_text": "Enter a descriptive title for the contract",
        "placeholder": "Enter contract title...",
        "visible": true,
        "editable": true,
        "required": true,
        "max_length": 255,
        "min_length": 5,
        "validation": "validation_rules.contract.fields.title"
      },
      "description": {
        "field_name": "description",
        "type": "textarea",
        "label": "Description",
        "help_text": "Detailed description of the contract scope and objectives",
        "placeholder": "Enter detailed contract description...",
        "visible": true,
        "editable": true,
        "required": false,
        "max_length": 2000,
        "rows": 4
      }
    },
    "organization_references": {
      "agency_id": {
        "field_name": "agency_id",
        "type": "select",
        "label": "Agency",
        "help_text": "Select the agency responsible for this contract",
        "data_source": "data_sources.organizations",
        "data_source_filter": {
          "type": "AGENCY"
        },
        "visible": true,
        "editable": {
          "type": "conditional",
          "condition": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION']",
          "value": true,
          "fallback": false
        },
        "required": true,
        "depends_on": {
          "field": "program_id",
          "clear_on_change": true,
          "cascade": true
        },
        "validation": "validation_rules.contract.fields.agency_id"
      },
      "provider_id": {
        "field_name": "provider_id",
        "type": "select",
        "label": "Provider",
        "help_text": "Select the provider organization for this contract",
        "data_source": "data_sources.organizations",
        "data_source_filter": {
          "type": "PROVIDER"
        },
        "visible": true,
        "editable": {
          "type": "conditional",
          "condition": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION']",
          "value": true,
          "fallback": false
        },
        "required": true,
        "validation": "validation_rules.contract.fields.provider_id"
      },
      "program_id": {
        "field_name": "program_id",
        "type": "select",
        "label": "Program",
        "help_text": "Select the program this contract belongs to (optional)",
        "data_source": "data_sources.programs",
        "visible": true,
        "editable": {
          "type": "conditional",
          "condition": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION']",
          "value": true,
          "fallback": false
        },
        "required": false,
        "depends_on": {
          "field": "agency_id",
          "clear_on_change": true,
          "cascade": true
        }
      }
    },
    "contract_classification": {
      "contract_type_id": {
        "field_name": "contract_type_id",
        "type": "select",
        "label": "Contract Type",
        "help_text": "Select the type of contract",
        "data_source": "data_sources.contract_types",
        "visible": true,
        "editable": {
          "type": "conditional",
          "condition": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION']",
          "value": true,
          "fallback": false
        },
        "required": true,
        "validation": "validation_rules.contract.fields.contract_type_id"
      },
      "procurement_method_id": {
        "field_name": "procurement_method_id",
        "type": "select",
        "label": "Procurement Method",
        "help_text": "Method used to procure this contract",
        "data_source": "data_sources.procurement_methods",
        "visible": true,
        "editable": {
          "type": "conditional",
          "condition": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION']",
          "value": true,
          "fallback": false
        },
        "required": false
      }
    },
    "financial_information": {
      "award_amount": {
        "field_name": "award_amount",
        "type": "currency",
        "label": "Contract Value",
        "help_text": "Original award amount for this contract",
        "placeholder": "0.00",
        "visible": true,
        "editable": {
          "type": "role_based",
          "roles": ["ACCO_MANAGER", "FINANCE_MANAGER"],
          "conditions": {
            "ACCO_MANAGER": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION', 'PENDING_SUBMISSION', 'REGISTERED', 'SUSPENDED']",
            "FINANCE_MANAGER": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION', 'PENDING_SUBMISSION', 'REGISTERED', 'SUSPENDED']"
          },
          "fallback": false
        },
        "required": true,
        "min_value": 0,
        "max_value": 999999999.99,
        "currency": "USD",
        "validation": "validation_rules.contract.fields.award_amount"
      },
      "base_amount": {
        "field_name": "base_amount",
        "type": "currency",
        "label": "Base Amount",
        "help_text": "Base contract amount before amendments",
        "placeholder": "0.00",
        "visible": true,
        "editable": {
          "type": "role_based",
          "roles": ["ACCO_MANAGER", "FINANCE_MANAGER"],
          "conditions": {
            "ACCO_MANAGER": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION', 'PENDING_SUBMISSION', 'REGISTERED', 'SUSPENDED']",
            "FINANCE_MANAGER": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION', 'PENDING_SUBMISSION', 'REGISTERED', 'SUSPENDED']"
          },
          "fallback": false
        },
        "required": false,
        "min_value": 0,
        "max_value": 999999999.99,
        "currency": "USD"
      },
      "current_contract_amount": {
        "field_name": "current_contract_amount",
        "type": "currency",
        "label": "Current Contract Amount",
        "help_text": "Current total contract amount including amendments",
        "placeholder": "0.00",
        "visible": {
          "type": "role_based",
          "roles": ["ACCO_MANAGER", "FINANCE_MANAGER"]
        },
        "editable": false,
        "required": false,
        "min_value": 0,
        "max_value": 999999999.99,
        "currency": "USD",
        "computed": true,
        "formula": "SUM({{contract.amendments.amendment_amount}})"
      }
    },
    "contract_period": {
      "start_date": {
        "field_name": "start_date",
        "type": "date",
        "label": "Contract Start Date",
        "help_text": "Date when the contract becomes effective",
        "placeholder": "MM/DD/YYYY",
        "visible": true,
        "editable": {
          "type": "conditional",
          "condition": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION', 'PENDING_SUBMISSION', 'REGISTERED', 'SUSPENDED']",
          "value": true,
          "fallback": false
        },
        "required": true,
        "min_date": "{{today}}",
        "max_date": "{{today + 365}}",
        "validation": "validation_rules.contract.fields.start_date"
      },
      "end_date": {
        "field_name": "end_date",
        "type": "date",
        "label": "Contract End Date",
        "help_text": "Date when the contract expires",
        "placeholder": "MM/DD/YYYY",
        "visible": true,
        "editable": {
          "type": "conditional",
          "condition": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION', 'PENDING_SUBMISSION', 'REGISTERED', 'SUSPENDED']",
          "value": true,
          "fallback": false
        },
        "required": true,
        "min_date": "{{contract.start_date}}",
        "max_date": "{{contract.start_date + 3650}}",
        "validation": "validation_rules.contract.fields.end_date"
      }
    },
    "status_information": {
      "status": {
        "field_name": "status",
        "type": "select",
        "label": "Status",
        "help_text": "Current status of the contract",
        "data_source": "data_sources.contract_statuses",
        "visible": true,
        "editable": {
          "type": "role_based",
          "roles": ["ACCO_MANAGER", "FINANCE_MANAGER"],
          "conditions": {
            "ACCO_MANAGER": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION', 'PENDING_SUBMISSION', 'REGISTERED', 'SUSPENDED']",
            "FINANCE_MANAGER": "{{contract.status}} in ['DRAFT', 'PENDING_CONFIGURATION', 'PENDING_SUBMISSION', 'REGISTERED', 'SUSPENDED']"
          },
          "fallback": false
        },
        "required": true,
        "default": "DRAFT"
      }
    }
  },
  "amendment_fields": {
    "amendment_id": {
      "field_name": "amendment_id",
      "type": "text",
      "label": "Amendment ID",
      "help_text": "Unique identifier for the amendment",
      "placeholder": "AMD-001-2024",
      "visible": true,
      "editable": {
        "type": "conditional",
        "condition": "{{form.mode}} === 'create'",
        "value": true,
        "fallback": false
      },
      "required": true,
      "max_length": 50,
      "format": "uppercase"
    },
    "amendment_type": {
      "field_name": "amendment_type",
      "type": "select",
      "label": "Amendment Type",
      "help_text": "Type of amendment being made",
      "data_source": "data_sources.amendment_types",
      "visible": true,
      "editable": true,
      "required": true
    },
    "amendment_amount": {
      "field_name": "amendment_amount",
      "type": "currency",
      "label": "Amendment Amount",
      "help_text": "Amount of the amendment",
      "placeholder": "0.00",
      "visible": true,
      "editable": true,
      "required": true,
      "min_value": -999999999.99,
      "max_value": 999999999.99,
      "currency": "USD"
    },
    "amendment_date": {
      "field_name": "amendment_date",
      "type": "date",
      "label": "Amendment Date",
      "help_text": "Date when the amendment was made",
      "placeholder": "MM/DD/YYYY",
      "visible": true,
      "editable": true,
      "required": true,
      "min_date": "{{contract.start_date}}",
      "max_date": "{{today}}"
    }
  },
  "workflow_fields": {
    "workflow_definition": {
      "workflow_id": {
        "field_name": "workflow_id",
        "type": "text",
        "label": "Workflow ID",
        "help_text": "Unique identifier for the workflow",
        "visible": true,
        "editable": false,
        "required": true
      },
      "name": {
        "field_name": "name",
        "type": "text",
        "label": "Workflow Name",
        "help_text": "Name of the workflow",
        "visible": true,
        "editable": true,
        "required": true,
        "max_length": 255
      },
      "workflow_type": {
        "field_name": "workflow_type",
        "type": "select",
        "label": "Workflow Type",
        "help_text": "Type of workflow",
        "data_source": "data_sources.workflow_types",
        "visible": true,
        "editable": true,
        "required": true
      },
      "configuration": {
